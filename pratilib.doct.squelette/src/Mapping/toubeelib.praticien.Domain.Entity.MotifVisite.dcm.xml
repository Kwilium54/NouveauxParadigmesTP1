<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="toubeelib\praticien\Domain\Entity\MotifVisite" table="motif_visite">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="libelle" column="libelle" type="string" length="128"/>
        <field name="specialiteId" column="specialite_id" type="integer"/>
        
        <many-to-one field="specialite" target-entity="Specialite">
            <join-column name="specialite_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
